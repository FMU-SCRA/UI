<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGWhite">

    <LinearLayout
        android:id="@+id/medicationEntry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_medication" />

            <TextView
                android:id="@+id/MyHealthGraph"
                android:layout_width="135dp"
                android:layout_height="75dp"
                android:text="@string/allergies"
                android:textColor="@color/PinkHuesDark"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                //Medication Name

                <TextView
                    android:id="@+id/medName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medName"
                    android:textColor="@color/PinkHuesDark"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medNameText"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medicationNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>

                //Medication Dose

                <TextView
                    android:id="@+id/medDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/medDose"
                    android:textColor="@color/PinkHuesMedium"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medDoseDesc"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medDoseInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:hint="@string/description"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>

                //Medication Delivery

                <TextView
                    android:id="@+id/medDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/medDelivery"
                    android:textColor="@color/PinkHuesMedium"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medDeliveryDesc"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medDeliveryInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:hint="@string/description"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>

                //Medication RX Number

                <TextView
                    android:id="@+id/medRX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/medRxNum"
                    android:textColor="@color/PinkHuesMedium"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medRXNum"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medRXInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:hint="@string/description"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>

                //Medication Pharm Name

                <TextView
                    android:id="@+id/medPharmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/medPharmName"
                    android:textColor="@color/PinkHuesMedium"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medPharmNameDesc"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medPharmNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:hint="@string/description"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>

                //Medication Phone Number

                <TextView
                    android:id="@+id/medPharmNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/medPhoneNum"
                    android:textColor="@color/PinkHuesMedium"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/medPharmNumberDesc"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/medPharmNumberInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:hint="@string/description"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            </ScrollView>

        <LinearLayout
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!--android:background="@drawable/mybutton"-->
            <!--android:fontFamily="@font/catamaran_bold"-->
            <!--android:backgroundTint="@color/colorPrimaryDark"-->
            <!--android:textColor="@color/white"-->
            <Button
                android:id="@+id/clearData"
                android:layout_width="125dp"
                android:layout_height="62dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/PinkHuesMedium"
                android:text="@string/clear"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <!--android:background="@drawable/mybutton"-->
            <!--android:fontFamily="@font/catamaran_bold"-->
            <!--android:backgroundTint="@color/colorPrimaryDark"-->
            <!--android:textColor="@color/white"-->
            <Button
                android:id="@+id/enterData"
                android:layout_width="125dp"
                android:layout_height="62dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/PinkHuesMedium"
                android:text="@string/enter"
                android:textColor="@color/white" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>