<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/BGWhite"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">


                <!--android:textSize="20sp"-->
                <!--android:text="@string/enterBloodPressure"-->
                <!--android:backgroundTint="@color/RedHuesMedium"-->
                <!--android:textColor="@color/white"-->
                <ImageButton
                    android:id="@+id/EnterBloodPressure2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="75dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_bloodpressure"
                    android:padding="3dp" />

                <!--android:backgroundTint="@color/BlueHuesMedium"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="20sp"-->
                <!--android:text="@string/enterCholesterolLevels"-->

                <ImageButton
                    android:id="@+id/EnterCholesterol2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="275dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_cholesterol" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">


                <!--android:backgroundTint="@color/PurpleHuesMedium"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="20sp"-->
                <!--android:text="@string/enterBloodSugarLevels"-->
                <!--android:layout_width="170dp"-->
                <!--android:layout_height="128dp"-->
                <ImageButton
                    android:id="@+id/EnterBloodSugar2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/ic_bslogo"
                    android:text="@string/enterBloodSugarLevels"
                    android:textSize="20sp" />


                <!--android:textSize="20sp"-->
                <!--android:text="@string/enterVaccinationRecords"-->
                <!--android:backgroundTint="@color/GreenHuesMedium"-->
                <!--android:textColor="@color/white"-->
                <ImageButton
                    android:id="@+id/EnterVaccinationData2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="275dp"
                    android:background="@drawable/ic_vaccination" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>