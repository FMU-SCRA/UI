<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_medication" />

            <TextView
                android:id="@+id/MyHealthGraph"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/medication"
                android:textColor="@color/PinkHuesDark"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ReportsBox"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/medName"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:paddingStart="3dp"
                        android:paddingEnd="8dp"
                        android:text="@string/medication"
                        android:layout_height="fill_parent"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/medDose"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.8"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp"
                        android:text="@string/medDose"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/medDeliveryLabel"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:text="Delivery"
                        android:layout_height="fill_parent"
                        android:paddingEnd="5dp"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/medRXNumberLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.7"
                        android:paddingStart="0dp"
                        android:paddingEnd="3dp"
                        android:text="RX Number"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/medPharmNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.0"
                        android:text="@string/medPharmName"
                        android:layout_height="fill_parent"
                        android:paddingEnd="3dp"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/medPharmNumberLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.9"
                        android:paddingStart="0dp"
                        android:paddingEnd="3dp"
                        android:text="@string/medPhoneNum"
                        android:textColor="@color/PinkHuesDark"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/medParent"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TableLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/medTable"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        >

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>