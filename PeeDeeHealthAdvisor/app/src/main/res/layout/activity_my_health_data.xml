<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyHealthDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/MyHeaalthDataScreen"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:text="My Health Data"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:srcCompat="@android:drawable/ic_media_previous" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="75dp">

            <Button
                android:id="@+id/ViewData"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:textSize="20sp"
                android:text="View Data"
                app:layout_constraintTop_toBottomOf="@+id/MyHeaalthDataScreen" />

            <Button
                android:id="@+id/EnterData"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:text="Enter Data"
                app:layout_constraintTop_toBottomOf="@+id/ViewData" />

        </LinearLayout> <!--End of bottom LinearLayout-->

    </LinearLayout> <!--End of larger LinearLayout-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@android:drawable/ic_media_rew" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>