            <ImageButton
                android:id="@+id/phoneCallButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_phonecall"
                />

            <TextView
                android:id="@+id/medNameCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/medFreqCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medNameCardText"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="200dp"
                android:layout_marginTop="17dp"/>

            <TextView
                android:id="@+id/medDoseCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medNameCardText"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/medDoseCardTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medNameCardText"
                android:textColor="@color/white"
                android:text="@string/medDose"
                android:textSize="25dp"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/medDeliveryCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medDoseCardText"
                android:textColor="@color/white"
                android:layout_marginStart="66dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/medDeliveryCardTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medDoseCardText"
                android:textColor="@color/white"
                android:text="@string/medDelivery"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/medRXNumCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medDeliveryCardText"
                android:textColor="@color/white"
                android:layout_marginStart="89dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/medRXNumCardTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medDeliveryCardText"
                android:textColor="@color/white"
                android:text="@string/medRxNum"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/medPharmNameCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medRXNumCardText"
                android:textColor="@color/white"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/medPharmNameCardTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medRXNumCardText"
                android:textColor="@color/white"
                android:text="@string/medPharmName"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/medPharmNumCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medPharmNameCardText"
                android:textColor="@color/white"
                android:layout_marginStart="56dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/medPharmNumCardTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medPharmNameCardText"
                android:textColor="@color/white"
                android:text="@string/medPhoneNum"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"/>

