<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGWhite"
    tools:context=".SelectBloodPressureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/selectBloodPressureActivity"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:text="@string/bloodPressure"
                android:textColor="@color/RedHuesDark"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_homebuttonreverse" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="65dp">

            <!--android:textColor="@color/white"-->
            <!--android:textSize="20sp"-->
            <!--android:text="@string/graph"-->

            <Button
                android:id="@+id/ViewData"
                android:layout_width="200dp"
                android:layout_height="200dp"

                android:background="@drawable/ic_viewgraphbp"
                />

            <!--android:textColor="@color/white"-->
            <!--android:textSize="20sp"-->
            <!--android:text="@string/enterData"-->
            <!---->
            <Button
                android:id="@+id/EnterData"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/ViewData"
                android:background="@drawable/ic_blood_pressure_entry"
                />

        </LinearLayout> <!--End of bottom LinearLayout-->

    </LinearLayout> <!--End of larger LinearLayout-->

</android.support.constraint.ConstraintLayout>