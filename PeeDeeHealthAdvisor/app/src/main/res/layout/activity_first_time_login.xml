<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="290dp"
                android:layout_height="75dp"

                android:layout_marginTop="3dp"
                android:fontFamily="@font/catamaran_bold"
                android:text="@string/welcomeToHealthAdvisor"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="0"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/welcomeNameEntryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/genderAndName"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/firstName"
                android:layout_width="304dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/firstNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:gravity="center_horizontal"
                    android:hint="@string/firstName"
                    android:textColor="@color/colorPrimaryDark"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/LastName"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/lastNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:hint="@string/lastName"
                    android:textColor="@color/colorPrimaryDark"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_marginBottom="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/maleCheckBox"
                    android:layout_width="67dp"
                    android:layout_height="37dp"
                    android:text="@string/male"
                    android:textColor="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/femaleCheckBox"
                    android:layout_width="83dp"
                    android:layout_height="37dp"
                    android:text="@string/female"
                    android:textColor="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="@string/selectBirthDateBelow"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/editDate"
                android:layout_width="228dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/selectDate"
                android:inputType="date"
                android:longClickable="false"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:paddingLeft="4.0dip"
                    android:layout_marginTop="15dp"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/clearData"
                        android:layout_width="125dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/clear"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/enterData"
                        android:layout_width="125dp"
                        android:layout_height="62dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/enter"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>