<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGWhite">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_homebuttonreverse" />

            <TextView
                android:id="@+id/EnterCholesterolScreen"
                android:layout_width="175dp"
                android:layout_height="75dp"
                android:text="@string/enterCholesterol"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/HDLtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:text="@string/highDensityLipoprotein"
                android:textColor="@color/colorPrimaryDark"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/HDLInput"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/hdlInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/hDLTop"
                    android:inputType="number"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/LDLtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="@string/lowDensityLBottom"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/LDLInput"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ldlInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/lDLBottom"
                    android:inputType="number"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/TCtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="@string/totalCholesterol"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TCInput"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tcInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/tc"
                    android:inputType="number"
                    android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/selectDateBelow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:text="@string/selectDateBelow"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/editDate"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:textSize="16sp"
                android:hint="@string/selectDate"
                android:inputType="date"
                android:longClickable="false"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="1.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="5.0dip">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/clearData"
                    android:layout_width="125dp"
                    android:layout_height="62dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:text="@string/clear"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/enterData"
                    android:layout_width="125dp"
                    android:layout_height="62dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:text="@string/enter"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>