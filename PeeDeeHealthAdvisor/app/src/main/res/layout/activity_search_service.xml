<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchServiceActivity"
    android:background="@color/BGWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/SearchServiceScreen"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:text="@string/serviceSearch"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginEnd="6dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_homebutton_copy" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="75dp">

            <TextView
                android:id="@+id/SearchForThese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/searchForTheseServices"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/SearchServiceScreen" />

            <CheckBox
                android:id="@+id/BloodSugarCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/bloodSugar"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/SearchForThese" />

            <CheckBox
                android:id="@+id/BloodPressureCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/bloodPressure"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/BloodSugarCheckBox" />

            <CheckBox
                android:id="@+id/CholesterolCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/cholesterol"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/BloodPressureCheckBox" />

            <CheckBox
                android:id="@+id/FlueShotCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/fluShot"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/CholesterolCheckBox" />

            <CheckBox
                android:id="@+id/ShinglesVaccinationCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/shinglesVaccination"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/FlueShotCheckBox" />


            <!--android:textColor="@color/colorPrimaryDark"-->
            <CheckBox
                android:id="@+id/PneumoniaVaccinationCheckBox"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="@string/pneumoniaVaccination"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/Search"
                    android:layout_width="125dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="30dp"
                    android:textSize="15dp"
                    android:text="@string/search"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/mybutton"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>