<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resourceSearch"
    tools:context=".SearchServiceActivity"
    android:background="@color/BGWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/SearchServiceScreen"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:text="@string/serviceSearch"
                android:textSize="30dp"
                android:textColor="@color/BlueHuesMedium"
                android:textStyle="bold"
                android:layout_marginEnd="6dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_clinic_blue_home" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                >

                <GridLayout
                    android:id="@+id/searchIcons"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="380dp"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:layout_gravity="center_vertical"
                    >


                    <ImageButton
                        android:id="@+id/bloodPressureTEST1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="50dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_blood_pressure"/>

                    <ImageButton
                        android:id="@+id/bloodSugarSearch"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="3dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_blood_sugar"/>

                    <ImageButton
                        android:id="@+id/cholesterolSearch"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="50dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_cholesterol_icon"/>

                    <TextView
                        android:id="@+id/SearchBPText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:text="@string/bloodPressure"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/BlueHuesDark"/>

                    <TextView
                        android:id="@+id/SearchBSText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:text="@string/bloodSugar"
                        android:layout_marginStart="7dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/BlueHuesDark"/>

                    <TextView
                        android:id="@+id/SearchCholesterolText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:layout_marginStart="12dp"
                        android:text="@string/cholesterol"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/BlueHuesDark"/>

                    <ImageButton
                        android:id="@+id/fluShotSearch"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_vaccinations"/>

                    <ImageButton
                        android:id="@+id/shinglesSearch"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="top"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="3dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_vaccinations"/>

                    <ImageButton
                        android:id="@+id/pneumoniaSearch"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="top"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        android:background="@drawable/ic_vaccinations"/>

                    <TextView
                        android:id="@+id/SearchFluText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:text="@string/fluShot"
                        android:layout_marginBottom="40dp"
                        android:layout_marginStart="-9dp"
                        android:textColor="@color/BlueHuesDark"/>

                    <TextView
                        android:id="@+id/SearchShingles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:text="@string/tableShingle"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/BlueHuesDark"/>

                    <TextView
                        android:id="@+id/SearchPneumonia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dp"
                        android:text="@string/pneumonia"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:textColor="@color/BlueHuesDark"/>


                </GridLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                    <Button
                        android:id="@+id/Search"
                        android:layout_width="125dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="30dp"
                        android:textSize="15dp"
                        android:text="@string/search"
                        android:layout_marginStart="3dp"
                        android:backgroundTint="@color/BlueHuesLight"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>