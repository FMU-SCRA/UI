<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDataActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
        >

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_homebuttonreverse" />

            <TextView
                android:id="@+id/SelectDataEnterScreen"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:text="@string/healthEntry"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/EnterBloodPressure"
                        android:layout_width="170dp"
                        android:layout_height="128dp"
                        android:layout_marginTop="75dp"
                        android:padding="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="20sp"
                        android:text="@string/enterBloodPressure"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/EnterCholesterol"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="230dp"
                        android:textSize="20sp"
                        android:text="@string/enterCholesterolLevels"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white" />

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                    <Button
                        android:id="@+id/EnterBloodSugar"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="75dp"
                        android:layout_alignParentStart="true"
                        android:textSize="20sp"
                        android:text="@string/enterBloodSugarLevels"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/EnterVaccinationData"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="275dp"
                        android:layout_marginStart="5dp"
                        android:layout_alignParentStart="true"
                        android:textSize="20sp"
                        android:text="@string/enterVaccinationRecords"
                        android:background="@drawable/mybutton"
                        android:textColor="@color/white" />
                </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>