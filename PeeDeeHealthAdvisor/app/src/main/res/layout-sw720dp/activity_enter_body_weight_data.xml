<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGWhite">

    <LinearLayout
        android:id="@+id/BodyWeightEntryLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_bodyweighthome" />

            <TextView
                android:id="@+id/EnterBodyWeightScreen"
                android:layout_width="180dp"
                android:layout_height="67dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="5dp"
                android:text="@string/enterBodyWeight"
                android:textColor="@color/BodyWeightHuesDark"
                android:textSize="30dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/body_weight"
                    android:layout_width="101dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:textSize="26dp"
                    android:text="@string/weight"
                    android:textColor="@color/BodyWeightHuesDark"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bodyWeight"
                    android:layout_width="260dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/BodyWeightInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:hint="@string/weightInPounds"
                        android:inputType="numberDecimal"
                        android:textColor="@color/BodyWeightHuesDark"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:id="@+id/selectDateBelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="26dp"
                    android:text="@string/selectDateBelow"
                    android:textColor="@color/BodyWeightHuesDark"/>

                <EditText
                    android:id="@+id/editDate"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="@string/selectDate"
                    android:inputType="date"
                    android:longClickable="false"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/selectTimeBelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="26dp"
                    android:text="@string/selectTimeBelow"
                    android:textColor="@color/BodyWeightHuesDark"/>

                <EditText
                    android:id="@+id/editTimeBodyWeight"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="@string/selectTime"
                    android:inputType="date"
                    android:longClickable="false"
                    android:textAlignment="center"
                    android:layout_marginBottom="40dp"
                    android:textSize="20dp" />

            </LinearLayout>

        </ScrollView>

            <LinearLayout
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_marginTop="350dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/ClearData"
                    android:layout_width="162dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="20dp"
                    android:text="Clear"
                    android:textSize="15dp"
                    android:background="@drawable/mybutton"
                    android:backgroundTint="@color/BodyWeightHuesDark"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/EnterData"
                    android:layout_width="162dp"
                    android:layout_height="81dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/BodyWeightHuesDark"
                    android:text="Enter"
                    android:background="@drawable/mybutton"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>