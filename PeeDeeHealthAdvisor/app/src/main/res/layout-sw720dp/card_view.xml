<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/BGWhite"
    tools:context=".AppSwitcher">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardBackgroundColor="@color/BGWhite"-->
        <!--&gt;-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/Home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_homebutton_copy" />

        <TextView
            android:id="@+id/SelectDataEnterScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="18dp"
            android:text="@string/myHealthData"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPagerSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp">


    </android.support.v4.view.ViewPager>

    <GridLayout
        android:id="@+id/appScreens2"
        android:layout_marginTop="100dp"
        android:layout_marginStart="36dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="675dp"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bloodPressureTEST"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left|top"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/cholesterolTEST"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="left|top"
            android:padding="4dp"
            android:background="@android:color/transparent"
            />


        <ImageButton
            android:id="@+id/bloodSugarTEST"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="left|top"
            android:padding="4dp"
            android:background="@android:color/transparent"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/vaccinationsTEST"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="left|top"
            android:padding="4dp"
            android:background="@android:color/transparent"
            />
    </GridLayout>

    <LinearLayout
        android:id="@+id/dotsLayoutSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:textSize="16dp">


    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>